---
name: eturnal

services:
  app:
    image: ghcr.io/processone/eturnal:latest
    hostname:       ${COMPOSE_PROJECT_NAME}
    container_name: ${COMPOSE_PROJECT_NAME}
    environment:
      - ETURNAL_RELAY_MIN_PORT=50000
      - ETURNAL_RELAY_MAX_PORT=50500

    ### security options
    # read_only: true
    # cap_drop:
