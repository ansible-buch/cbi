---
apiVersion: v1
kind: Namespace
metadata:
  name: semaphore

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: semaphore-pvc
  namespace: semaphore
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: semaphore
  namespace: semaphore
spec:
  replicas: 1
  selector:
    matchLabels:
      app: semaphore
  template:
    metadata:
      labels:
        app: semaphore
    spec:
      containers:
      - name: semaphore
        image: semaphoreui/semaphore
        ports:
        - containerPort: 3000
        volumeMounts:
        - mountPath: /var/lib/semaphore
          name: semaphore-data
        env:
        - name: SEMAPHORE_DB_DIALECT
          value: bolt
        - name: SEMAPHORE_ADMIN
          value: admin
        - name: SEMAPHORE_ADMIN_PASSWORD
          value: {{default_password | b64decode}}
        - name: SEMAPHORE_ADMIN_EMAIL
          value: admin@{{domain}}
      volumes:
      - name: semaphore-data
        persistentVolumeClaim:
          claimName: semaphore-pvc

---
apiVersion: v1
kind: Service
metadata:
  name: semaphore-http
  namespace: semaphore
spec:
  type: ClusterIP
  selector:
    app: semaphore
  ports:
    - port: 80
      targetPort: 3000

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: semaphore-ingress
  namespace: semaphore
spec:
  rules:
    - host: semaphore.{{domain}}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: semaphore-http
                port:
                  number: 80
